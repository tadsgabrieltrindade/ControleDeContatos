@{
    ViewData["Title"] = "Editar Contato";
}

<div class="text-center">
    <h1 class="display-4">Editar Contato</h1>
    <br />
    
</div>

 <form>
      <div class="mb-3">
            <label for="Nome" class="form-label" >Nome</label>
            <input type="text" class="form-control" id="Nome" placeholder="Digite o nome do novo contato">
           
        </div>


        <div class="mb-3">
        <label for="Email" class="form-label">Email</label>
        <input type="text" class="form-control" id="Email" placeholder="Digite o e-mail do novo contato">
           
        </div>


        <div class="mb-3">
        <label for="Telefone" class="form-label">Telefone</label>
        <input type="text" class="form-control" id="Telefone" placeholder="Digite o telefone do novo contato">

        </div>
        
        <button type="submit" class="btn btn-outline-success">Alterar</button>

        <a type="submit" class="btn btn-outline-primary" asp-controller="Contato" asp-action="Index">Voltar</a>

    </form>



